<Window x:Class="البطاريه.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:البطاريه" mc:Ignorable="d" Title="مراقب البطارية" Height="600" Width="900" Background="#1E1E1E" Foreground="White" WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <local:ArcConverter x:Key="ArcConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="مراقب البطارية" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#00D1FF" Margin="0,0,0,20"/>

        <!-- Main Info (Percentage Circle) -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="199">
            <Grid Width="180" Height="180" FlowDirection="LeftToRight">
                <!-- Background Circle (Gray) -->
                <Ellipse Stroke="#333" StrokeThickness="10" Width="180" Height="180"/>

                <!-- Progress Arc (Blue) -->
                <Path x:Name="ArcPath" Stroke="#00D1FF" StrokeThickness="10" StrokeStartLineCap="Round" StrokeEndLineCap="Round" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Path.Effect>
                        <DropShadowEffect Color="#00D1FF" BlurRadius="15" ShadowDepth="0"/>
                    </Path.Effect>
                    <Path.Data>
                        <MultiBinding Converter="{StaticResource ArcConverter}">
                            <Binding Path="BatteryPercentage"/>
                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                            <Binding ElementName="ArcPath" Path="StrokeThickness"/>
                        </MultiBinding>
                    </Path.Data>
                </Path>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" FlowDirection="RightToLeft">
                    <TextBlock Text="{Binding BatteryPercentage, StringFormat={}{0}%}" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center" FlowDirection="LeftToRight"/>
                    <TextBlock Text="{Binding BatteryStatus}" FontSize="14" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,5,0,0" FlowDirection="RightToLeft"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="{Binding EstimatedTimeRemaining}" FontSize="16" HorizontalAlignment="Center" Margin="0,15,0,0" Foreground="#DDD"/>
        </StackPanel>

        <!-- Details Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1 -->
                <Border Grid.Row="0" Grid.Column="0" Background="#2D2D2D" Margin="5" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="🔋 اسم البطارية" FontSize="13" Foreground="#888"/>
                        <TextBlock Text="{Binding BatteryName}" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Background="#2D2D2D" Margin="5" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="⚡ حالة البطارية" FontSize="13" Foreground="#888"/>
                        <TextBlock Text="{Binding BatteryHealth}" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Row 2 -->
                <Border Grid.Row="1" Grid.Column="0" Background="#2D2D2D" Margin="5" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="📊 السعة التصميمية" FontSize="13" Foreground="#888"/>
                        <TextBlock Text="{Binding DesignCapacity}" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0" FlowDirection="LeftToRight" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Background="#2D2D2D" Margin="5" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="🔌 سعة الشحن الكامل" FontSize="13" Foreground="#888"/>
                        <TextBlock Text="{Binding FullChargeCapacity}" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0" FlowDirection="LeftToRight" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Row 3 -->
                <Border Grid.Row="2" Grid.Column="0" Background="#2D2D2D" Margin="5" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="🧪 نوع البطارية" FontSize="13" Foreground="#888"/>
                        <TextBlock Text="{Binding BatteryChemistry}" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Grid.Column="1" Background="#2D2D2D" Margin="5" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="🔌 مصدر الطاقة" FontSize="13" Foreground="#888"/>
                        <TextBlock Text="{Binding PowerSource}" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Row 4 -->
                <Border Grid.Row="3" Grid.Column="0" Background="#2D2D2D" Margin="5" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="⚡ قيد الشحن" FontSize="13" Foreground="#888"/>
                        <TextBlock Text="{Binding ChargingStatus}" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="3" Grid.Column="1" Background="#2D2D2D" Margin="5" Padding="15" CornerRadius="10">
                    <StackPanel>
                        <TextBlock Text="⏱️ الوقت المتبقي" FontSize="13" Foreground="#888"/>
                        <TextBlock Text="{Binding EstimatedTimeRemaining}" FontSize="14" FontWeight="SemiBold" Margin="0,5,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
